{
  "compilerOptions": {
    // Remove or comment out this line:
    // "verbatimModuleSyntax": true,
    
    // Or set it to false:
    "verbatimModuleSyntax": false,
    
    // Ensure these are set:
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    // Rest of your config
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true
  }
}